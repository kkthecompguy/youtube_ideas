<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img src="/img/logo.png" class="img" alt="Logo">
      <h2 class="text-center">Account Register</h2>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" name="name" value="{{name}}" required  class="form-control">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" value="{{email}}" required class="form-control">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" value="{{password}}" required class="form-control">
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input type="password" name="password2" value="{{password2}}" required class="form-control">
        </div>
        <input type="submit" value="Submit" class="btn btn-dark btn-block">
        <p>Already have an account? <span><a href="/users/login">Login</a></span></p>
      </form>
    </div>
  </div>
</div>